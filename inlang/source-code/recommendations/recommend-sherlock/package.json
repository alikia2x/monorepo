{
	"name": "@inlang/recommend-sherlock",
	"description": "A package to recommend Sherlock",
	"version": "0.1.0",
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": "./dist/index.js"
	},
	"files": [
		"./dist",
		"./src"
	],
	"scripts": {
		"build": "tsc --build",
		"dev": "tsc --watch",
		"test": "tsc --noEmit && vitest run --passWithNoTests --coverage",
		"lint": "eslint ./src --fix",
		"format": "prettier ./src --write",
		"clean": "rm -rf ./dist ./node_modules"
	},
	"devDependencies": {
		"@lix-js/fs": "workspace:*",
		"@inlang/sdk": "workspace:^0",
		"@types/vscode": "^1.84.2",
		"comment-json": "^4.2.3",
		"patch-package": "6.5.1",
		"memfs": "4.6.0",
		"@sinclair/typebox": "^0.31.17",
		"typescript": "^5.1.3",
		"@vitest/coverage-v8": "0.33.0",
		"vitest": "0.33.0"
	}
}
